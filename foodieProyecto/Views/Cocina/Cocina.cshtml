
@{
    ViewData["Title"] = "Panel de Cocina";
}

<style>
    .nav-tabs {
        display: flex;
        border-bottom: 1px solid #ddd;
        margin-bottom: 20px;
    }

    .nav-tab {
        padding: 10px 20px;
        margin-right: 5px;
        border-radius: 5px 5px 0 0;
        cursor: pointer;
    }

    .active-tab {
        background-color: #c41e3a;
        color: white;
        font-weight: bold;
    }

    .inactive-tab {
        background-color: #f1f1f1;
        color: #333;
    }

    .search-section {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
        align-items: center;
    }

    .order-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: white;
        margin-bottom: 20px;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
        margin-bottom: 10px;
    }

    .order-number {
        font-size: 22px;
        font-weight: bold;
        color: #174170;
    }

    .order-time {
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }

    .table-number {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .order-item {
        margin-bottom: 15px;
        border-bottom: 1px solid #f1f1f1;
        padding-bottom: 10px;
    }

    .order-item-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
    }

    .item-name {
        font-weight: bold;
        color: #174170;
        font-size: 16px;
    }

    .item-badge {
        padding: 2px 6px;
        border-radius: 50%;
        font-weight: bold;
        text-align: center;
        display: inline-block;
        width: 18px;
        height: 18px;
        line-height: 18px;
    }

    .badge-red {
        background-color: #c41e3a;
        color: white;
    }

    .badge-yellow {
        background-color: #ffc107;
        color: black;
    }

    .item-description {
        font-size: 12px;
        color: #999;
        margin-bottom: 8px;
    }

    .action-btn {
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        width: 100%;
        margin-top: 5px;
    }

    .btn-start {
        background-color: #c41e3a;
        color: white;
    }

    .btn-finish {
        background-color: #455a64;
        color: white;
    }

    .btn-completed {
        background-color: #2e8b57;
        color: white;
    }
</style>

<div class="container">
    <div class="nav-tabs">
        <div class="nav-tab active-tab">Panel de cocina</div>
        <div class="nav-tab inactive-tab">Panel en línea</div>
    </div>

    <div class="search-section">
        <div class="sort">
            <label for="sortOrder" class="form-label">Ordenar:</label>
            <select id="sortOrder" class="form-select">
                <option>Más reciente</option>
                <option>Más antiguo</option>
                <option>Mesa</option>
            </select>
        </div>

        <div class="input-group" style="width: 300px;">
            <input type="text" class="form-control" placeholder="Buscar por # de pedido">
            <button class="btn btn-secondary" type="button">Buscar</button>
        </div>
    </div>

    <div class="row">
        <!-- Pedido 1 -->
        <div class="col-md-4">
            <div class="order-card">
                <div class="order-header">
                    <div class="order-number">Pedido #213</div>
                    <div class="order-time">13:01</div>
                </div>

                <div class="table-number">Mesa #1</div>

                <div class="order-item">
                    <div class="order-item-header">
                        <div class="item-name">Filete de res a la parrilla</div>
                        <div class="item-badge badge-red">S</div>
                    </div>
                    <div class="item-description">Término medio sin cebolla</div>
                    <button class="action-btn btn-start">Iniciar preparación</button>
                </div>

                <div class="order-item">
                    <div class="order-item-header">
                        <div class="item-name">Papas fritas</div>
                        <div class="item-badge badge-yellow">P</div>
                    </div>
                    <div class="item-description"></div>
                    <button class="action-btn btn-finish">Finalizar preparación</button>
                </div>

                <div class="order-item">
                    <div class="order-item-header">
                        <div class="item-name">Ensaladas César</div>
                    </div>
                    <div class="item-description">Sin anchoas, aderezo aparte</div>
                    <button class="action-btn btn-completed">Finalizado</button>
                </div>

                <div class="order-item">
                    <div class="order-item-header">
