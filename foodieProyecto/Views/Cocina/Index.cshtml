@using foodieProyecto.Models.Vistas
@model List<DetallePedidoViewModel>

@{
    ViewData["Title"] = "Panel de Cocina";
}

<style>
    .nav-tabs {
        display: flex;
        border-bottom: 1px solid #ddd;
        margin-bottom: 20px;
    }

    .nav-tab {
        padding: 10px 20px;
        margin-right: 5px;
        border-radius: 5px 5px 0 0;
        cursor: pointer;
    }

    .active-tab {
        background-color: #c41e3a;
        color: white;
        font-weight: bold;
    }

    .inactive-tab {
        background-color: #f1f1f1;
        color: #333;
    }

    .search-section {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
        align-items: center;
    }

    .order-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: white;
        margin-bottom: 20px;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
        margin-bottom: 10px;
    }

    .order-number {
        font-size: 22px;
        font-weight: bold;
        color: #174170;
    }

    .order-time {
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }

    .table-number {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .order-item {
        margin-bottom: 15px;
        border-bottom: 1px solid #f1f1f1;
        padding-bottom: 10px;
    }

    .order-item-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
    }

    .item-name {
        font-weight: bold;
        color: #174170;
        font-size: 16px;
    }

    .item-badge {
        padding: 2px 6px;
        border-radius: 50%;
        font-weight: bold;
        text-align: center;
        display: inline-block;
        width: 18px;
        height: 18px;
        line-height: 18px;
    }

    .badge-red {
        background-color: #c41e3a;
        color: white;
    }

    .badge-yellow {
        background-color: #ffc107;
        color: black;
    }

    .item-description {
        font-size: 12px;
        color: #999;
        margin-bottom: 8px;
    }

    .action-btn {
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        width: 100%;
        margin-top: 5px;
    }

    .btn-start {
        background-color: #c41e3a;
        color: white;
    }

    .btn-finish {
        background-color: #455a64;
        color: white;
    }

    .btn-completed {
        background-color: #2e8b57;
        color: white;
    }
</style>

<div class="container">
    @await Html.PartialAsync("_Tabs")

    @await Html.PartialAsync("_SearchBar")

    <div class="row" id="zona-pedidos" 
         hx-get="/Cocina/ObtenerListadoPedidos" 
         hx-trigger="load, every 2s"            
         hx-target="#zona-pedidos"              <!-- Actualiza solo el contenido de #zona-pedidos -->
         hx-swap="outerHTML">
        <partial name="_ListadoPedidos" model="Model" />
    </div>
</div>

<script>
    document.body.addEventListener("htmx:afterSwap", function(event) {
        const itemId = event.target.id;
        if (itemId && itemId.startsWith('detalle-')) {
            const itemDiv = document.getElementById(itemId);
            if (itemDiv) {
                itemDiv.remove();
            }
        }
    });
</script>

