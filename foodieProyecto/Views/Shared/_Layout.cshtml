<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - foodieProyecto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/foodieProyecto.styles.css" asp-append-version="true" />
    <script src="https://unpkg.com/htmx.org@2.0.4"></script>

    <!-- estilos de la navbar-->

    <style>
        .navbar-foodie {
            height: 10vh;
            background-color: #b62025;
            color: white;
        }

            .navbar-foodie .logo {
                max-height: 150px;
                margin-right: 10px;
            }

            .navbar-foodie .brand-title {
                font-size: 1.2rem;
                font-weight: bold;
                color: white;
                text-decoration: none;
                margin-right: 10px;
            }

            .navbar-foodie .user-info {
                font-weight: 500;
                display: flex;
                align-items: center;
                gap: 0.3rem;
            }

            .navbar-foodie .user-icon {
                width: 32px;
                height: 32px;
                margin-right: 15%;
                border-radius: 50%;
                background-color: white;
                display: inline-block;
            }
    </style>
</head>
<body>
    <!-- Header estilo Foodie -->
    <header>
        <div class="navbar-foodie d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/images/logoPizza.png" alt="Logo" class="logo" />
                <a class="brand-title" asp-area="" asp-controller="Home" asp-action="Index">FoodieIndex  </a>
                <a class="brand-title" asp-area="" asp-controller="Cocina" asp-action="Index">  Cocina  </a>
            </div>
            <div class="user-info">
                <span>Nombre User</span>
                <span class="user-icon"></span>
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - foodieProyecto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
